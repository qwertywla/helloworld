<section class="contact" id="contact">
  <div class="container">
    <div class="row">
      <div class="col-12 col-xs-12 col-sm-12 col-md-12">
	<%= image_tag("contactlogo.jpg", style: "display: block; margin: auto;", class: "img-fluid") %>
      </div>
    </div>
    <div class="row">
      <div class="col-6 col-xs-6 col-sm-6 col-md-6">
        <br><br>
        <h4>Feedback</h4>
      	<p>I would love to hear from you! Inquries regarding commissions may take one to three business days. Please feel free to contact me.
      	</p>
      	<h4><i class="fas fa-envelope"></i> Email</h4>
      	  <p>qwerty.wla@gmail.com</p>
      	<h4><i class="fas fa-phone"></i> Phone</h4>
      	  <p>(415) 347-1886
      	  <br>Monday – Friday 9:00am – 5:00pm PST
      	  </p>
      </div> <!-- end col -->
        <div class="col-6 col-xs-6 col-sm-6 col-md-6">
          <br><br>
          <form>
          <div class="form-group">
            <input type="text" placeholder="Enter name" class="form-control" required="not required" id="name">

            <div class="form-group">
              <input type="email" placeholder="Enter email" class="form-control" require="not required" id="email">

            <div class="form-group">
              <input type="number" placeholder="Enter phone number" class="form-control" id="number"><br>

            <div class="form-group">
              <textarea style="resize:none" cols="20" rows="3" minlength="1" placeholder="Place your message here..." class="form-control message-box"></textarea>
                <button type="submit" class="btn btn-light" id="submit">Submit</button>
            </div>
          </div>
          </form>
        </div>
  </div><!-- end container -->
</section> <!-- end contact section -->
